<div class='row' style='margin-top: 32px;'>
  {{#if regerror}}
    <p class='alert'>{{regerror}}</p>
  {{/if}}
  {{#if logerror}}
    <p class='alert'>{{logerror}}</p>
  {{/if}}
  <div class='col s12'>
    <ul class='tabs'>
      <li class='tab col s3'><a href='#login'>Sign in</a></li>
      <li class='tab col s3'><a class='active' href='#register'>Sign up</a></li>
    </ul>
  </div>
  <div id='login' class='col s12'>

    <form action='/auth/login' method='post' style='margin-top: 32px;'>
      <input type='hidden' name='_csrf' value='{{csrf}}' />

      <input
        placeholder='email'
        type='email'
        class='validate'
        name='email'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert an email'></span>

      <input
        placeholder='password'
        type='password'
        class='validate'
        name='password'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert an password'></span>
      <div>
        <button
          type='submit'
          class='btn btn-primary'
          style='margin-top: 32px;'
        >Sign in</button>
      </div>
    </form>
  </div>
  <div id='register' class='col s12'>
    <form action='/auth/register' method='post' style='margin-top: 32px;'>
      <input type='hidden' name='_csrf' value='{{csrf}}' />

      <input
        placeholder='email'
        type='email'
        class='validate'
        name='email'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert an email'></span>

      <input
        placeholder='name'
        type='text'
        class='validate'
        name='name'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert a password'> </span>
      <input
        placeholder='password'
        type='password'
        class='validate'
        name='password'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert a password'> </span>
      <input
        placeholder='confirm'
        type='password'
        class='validate'
        name='confirm'
        required
        autocomplete
      />
      <span class='helper-text' data-error='Insert a confirm'> </span>
      <div>
        <button
          type='submit'
          class='btn btn-primary'
          style='margin-top: 32px;'
        >register</button>
      </div>
    </form>
  </div>
</div>