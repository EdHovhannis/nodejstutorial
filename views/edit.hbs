<h1>Edit a new Course</h1>
<form class='col s12' action='/courses/edit' method='post'>
  <input type='hidden' name='_csrf' value='{{csrf}}' />

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Title'
        id='title'
        type='text'
        class='validate'
        name='title'
        required
        value={{course.title}}
      />
      <label for='title'>Title</label>
      <span class='helper-text' data-error='insert the title'>Helper text</span>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Price'
        id='price'
        type='number'
        class='validate'
        name='price'
        required
        min='1'
        value={{course.price}}
      />
      <label for='title'>Price</label>
      <span class='helper-text' data-error='insert the price'>Helper text</span>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Image'
        id='img'
        type='text'
        class='validate'
        name='img'
        required
        value={{course.img}}
      />
      <label for='title'>Image</label>
      <span class='helper-text' data-error='insert the img url'>Helper text</span>
    </div>
  </div>
  <input type='hidden' name='id' id={{course.id}} value={{course.id}} />
  <div class='row'>
    <button type='submit' class='btn btn-primary'>
      Edit Course
    </button>
  </div>
</form>

<form action='/courses/remove' method='post'>
  <input type='hidden' name='_csrf' value='{{csrf}}' />
  <input type='hidden' name='id' value={{course.id}} />
  <button type='submit' class='btn btn-primary red accent-4'>
    Delete Course
  </button>
</form>