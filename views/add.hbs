<h1>Add a new Course</h1>
{{#if error}}
  <p class='alert'>{{error}}</p>
{{/if}}
<form class='col s12' action='/add' method='post'>
  <input type='hidden' name='_csrf' value='{{@root.csrf}}' />

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Title'
        id='title'
        type='text'
        class='validate'
        name='title'
        required
      />
      <label for='title'>Title</label>
      <span class='helper-text' data-error='insert the title'>Helper text</span>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Price'
        id='price'
        type='number'
        class='validate'
        name='price'
        required
        min='1'
      />
      <label for='title'>Price</label>
      <span class='helper-text' data-error='insert the price'>Helper text</span>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s6'>
      <input
        placeholder='Image'
        id='img'
        type='text'
        class='validate'
        name='img'
        required
      />
      <label for='title'>Image</label>
      <span class='helper-text' data-error='insert the img url'>Helper text</span>
    </div>
  </div>

  <div class='row'>
    <button type='submit' class='btn btn-primary'>
      Add Course
    </button>
  </div>
</form>